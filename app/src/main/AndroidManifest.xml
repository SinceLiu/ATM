<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.example.lxx.atm">

    <application
        tools:replace="android:label"
        android:name="org.litepal.LitePalApplication"
        android:label="ATM"
        android:allowBackup="true"
        android:icon="@drawable/atm_icon"
        android:supportsRtl="true"
        android:theme="@style/Theme.AppCompat.Light.NoActionBar">
        <activity android:name=".LoginActivity"
            android:label="atm">

            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>
                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>
        <activity android:name=".ActionActivity"/>
        <activity android:name=".BeyondBalanceActivity"/>
        <activity android:name=".ChangePasswordActivity"/>
        <activity android:name=".CheckBalanceActivity"/>
        <activity android:name=".DrawMoneyActivity"/>
        <activity android:name=".ExitActivity"/>
        <activity android:name=".FinishChangingPasswordActivity"/>
        <activity android:name=".FinishDrawingActivity"/>
        <activity android:name=".FinishSavingActivity"/>
        <activity android:name=".FinishTransferringActivity"/>
        <activity android:name=".TransferActivity"/>
        <activity android:name=".InputMoneyActivity"/>
        <activity android:name=".SaveMoneyActivity"/>
    </application>


</manifest>